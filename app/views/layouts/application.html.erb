<!DOCTYPE html>
<html>
<head>
  <title>LMS</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
<div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
  <h5 class="my-0 mr-md-auto font-weight-normal">Navaratan</h5>
  <nav class="my-2 my-md-0 mr-md-3">
    <% if user_signed_in? %>
      <a class="p-2 text-dark text-bold">Hello <%= current_user.username %></a>
    <% end %>
    <%= link_to "Home", leaves_path, class: "p-2 text-dark" %>
    <% if user_signed_in? %>

  <% unless current_user.reporting_head?%>
      <%= link_to "New Leave", new_leave_path, class: "p-2 text-dark" %>
    <% end %>
      <%end%>

    <!--<a class="p-2 text-dark" href="#">Features</a>-->

  </nav>
  <% if user_signed_in? %>
    <%= link_to('Logout', destroy_user_session_path, method: :delete, class: "btn btn-outline-primary") %>
  <% else %>
    <%= link_to('Login', new_user_session_path, class: "btn btn-outline-primary") %>
  <% end %>
</div>


<div class="container">
  <%= yield %>
</div>
</body>
</html>
