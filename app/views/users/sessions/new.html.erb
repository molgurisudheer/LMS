<div class="new-login">
  <h1 class="h3 mb-3 font-weight-normal">Login</h1>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-signin") do |f| %>

    <div class="form-label-group">
      <label for="inputEmail">User name</label>
      <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control", placeholder: "User name" %>
    </div>
    &nbsp;
    <div class="form-label-group">
      <label for="inputPassword">Password</label>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password" %>
    </div>
    &nbsp;
    <% if devise_mapping.rememberable? %>

      <div class="checkbox mb-3">
        <label>
          <%= f.check_box :remember_me %> Remember me
        </label>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block" %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>

